{
  "name": "portic",
  "version": "0.0.1",
  "description": "Simple pastebin analog",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "build": "preact build --no-prerender --src ./client/src --babelConfig ./client/.babelrc --dest ./client/build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "cd client && preact watch",
    "server" : "node server/bin/www",
    "lint": "eslint .",
    "lint:fix": "eslint \"{,!(node_modules)/**/}*.{js,jsx}\" --fix",
    "test": "jest"
  },
  "keywords": [
    "pastebin",
    "save",
    "snippet"
  ],
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "helmet": "^4.1.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "mongoose": "^5.10.7",
    "morgan": "~1.9.1",
    "preact": "^10.5.3",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-router-dom": "^5.2.0"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "quotes": [2, "single"],
      "semi": [2, "never"]
    }
  },
  "author": "Vlad Denisov",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "preact-cli": "^3.0.3",
    "sirv-cli": "1.0.3"
  }
}
